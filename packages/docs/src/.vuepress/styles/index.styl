@tailwind base;
@tailwind components;
@tailwind utilities;

#main-title,
.site-name
  @apply font-extrabold leading-normal
  
@supports (background-clip: text)
  #main-title,
  .site-name
    background linear-gradient(to right, #00aad8 0%, #3eaf7c 100%)
    background-clip text
    color transparent !important


.home .hero
  img
    max-width 450px!important
  
  .action
    a
      @apply rounded-lg
      background linear-gradient(to right, #00aad8 0%, #3eaf7c 100%)

h1
  @apply text-4xl font-medium

h2
  @apply text-3xl font-medium

h3
  @apply text-xl font-medium

p, .theme-code-group
  @apply my-4

a
  color $accentColor

ul:not(.sidebar-sub-headers)
  @apply ml-4 my-4

  & > li:not(.theme-code-group__li)
    @apply list-disc

.example
  @apply border-gray-300 border rounded-lg bg-gray-100 p-6

.v-popper__popper
  z-index 10

.v-popper--theme-_editor-tooltip .v-popper__inner
  @apply text-sm

.v-popper--theme-_editor-dropdown .v-popper__inner
  @apply p-2
