@tailwind base;
@tailwind components;

.home .hero img
  max-width 450px!important

h1
  @apply text-4xl font-medium

h2
  @apply text-3xl font-medium

h3
  @apply text-xl font-medium

p
  @apply my-4

a
  color $accentColor

ul:not(.sidebar-sub-headers)
  @apply ml-4 my-4

  & > li
    @apply list-disc

.example
  @apply border-gray-300 border rounded-lg bg-gray-100 p-6

.v-popper__popper
  z-index 10

@tailwind utilities;
